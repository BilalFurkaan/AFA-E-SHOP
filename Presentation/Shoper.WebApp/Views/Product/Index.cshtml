@using Shoper.Domain.Entities
@model List<ShoperApplication.Dtos.ProductDtos.ResultProductDto>
<div class="container-fluid mb-5" style="background: linear-gradient(45deg, rgba(17,98,203,0.22), #2575fc); box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 200px; padding: 20px;">
        <h1 class="font-weight-semi-bold text-uppercase mb-3" style="color: #fff; text-shadow: 2px 2px 4px rgba(0,0,0,0.2);">Our Products</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="/home/Index" style="color: #fff; text-decoration: none;">Home Page</a></p>
            <p class="m-0 px-2" style="color: #fff;">|</p>
            <p class="m-0" style="color: #fff;">Shop</p>
        </div>
    </div>
</div>
    <!-- Shop Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <!-- Shop Sidebar Start -->
            <div class="col-lg-3 col-md-12">
                <!-- Price Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Filter by price</h5>
                    <form>
                        <div class="list-group">
                            <a href="/Product/Index" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                All Price
                            </a>
                            <a href="/Product/Index?minprice=0&maxprice=10" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                $0 - $10
                            </a>
                            <a href="/Product/Index?minprice=10&maxprice=30" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                $10 - $30
                            </a>
                            <a href="/Product/Index?minprice=30&maxprice=50" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                $30 - $50
                            </a>
                            <a href="/Product/Index?minprice=50&maxprice=100" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                $50 - $100
                            </a>
                            <a href="/Product/Index?minprice=100&maxprice=200" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                $100 - $200
                            </a>
                            <a href="/Product/Index?minprice=200&maxprice=300" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                $200 - $300
                            </a>
                            <a href="/Product/Index?minprice=300&maxprice=400" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                $300 - $400
                            </a>
                            <a href="/Product/Index?minprice=400&maxprice=500" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                $400 - $500
                            </a>
                            <a href="/Product/Index?minprice=500&maxprice=1000" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                $500 - $1000
                            </a>
                        </div>
                    </form>
                </div>
                <!-- Price End -->
            </div>
            <div class="col-lg-9 col-md-12">
                <div class="row pb-3">
                    <div class="col-12 pb-1">
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <form action="Index" method="post">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search by name" id="search" name="search">
                                    <div class="input-group-append">
                                        <span class="input-group-text bg-transparent text-primary">
                                           <button type="submit"><i class="fa fa-search"></i></button> 
                                        </span>
                                    </div>
                                </div>
                            </form>
                            <div class="dropdown ml-4">
                                <button class="btn border dropdown-toggle" type="button" id="triggerId" data-toggle="dropdown" aria-haspopup="true"
                                        aria-expanded="false">
                                    Sort by
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="triggerId">
                                    <a class="dropdown-item" href="#">Latest</a>
                                    <a class="dropdown-item" href="#">Popularity</a>
                                    <a class="dropdown-item" href="#">Best Rating</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                            <div class="card product-item border-0 mb-4">
                                <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                    <img class="img-fluid w-100" src="https://images.weserv.nl/?url=@(System.Net.WebUtility.UrlEncode(item.ImageUrl))&w=450&h=600&fit=cover&q=100" alt="">
                                </div>
                                <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                    <h6 class="text-truncate mb-3">@item.ProductName</h6>
                                    <div class="d-flex justify-content-center">
                                        <h6>$@item.Price</h6><h6 class="text-muted ml-2"><del>$@item.Price</del></h6>
                                    </div>
                                </div>
                                <div class="card-footer d-flex justify-content-between bg-light border">
                                    <a href="/Product/Detail?id=@item.ProductÄ°d" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                                    <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="col-12 pb-1">
                        <nav aria-label="Page navigation">
                          <ul class="pagination justify-content-center mb-3">
                            <li class="page-item disabled">
                              <a class="page-link" href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                                <span class="sr-only">Previous</span>
                              </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                              <a class="page-link" href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                                <span class="sr-only">Next</span>
                              </a>
                            </li>
                          </ul>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Shop Product End -->
        </div>
    </div>
    <!-- Shop End -->